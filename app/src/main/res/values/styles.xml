<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Typography Reference-->
    <style name="TextAppearance.MaterialX.Body1.Spaced" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:letterSpacing">0.5</item>
    </style>

    <style name="TextAppearance.MaterialX.Body1.Styled" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/dancing_script</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Typography Demo-->
    <style name="Base.TextAppearance.MaterialX.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Base.TextAppearance.MaterialX.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Base.TextAppearance.MaterialX.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Base.TextAppearance.MaterialX.Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.MaterialX.Caption" parent="Base.TextAppearance.MaterialX.Caption">
        <item name="android:textColor">@color/color_grey_50_dark</item>
    </style>

    <style name="TextAppearance.MaterialX.Body" parent="Base.TextAppearance.MaterialX.Body">
        <item name="android:textColor">@color/color_grey_800_light</item>
    </style>

    <style name="TextAppearance.MaterialX.Overline" parent="Base.TextAppearance.MaterialX.Overline">
        <item name="android:textColor">@color/color_purple_500</item>
    </style>

    <!-- Material Buttons-->
    <style name="Widget.MaterialX.Button.TextButton.Icon" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/color_pink_900_light</item>
        <item name="rippleColor">@color/color_pink_900_light</item>
        <item name="android:textColor">@color/color_pink_900</item>
    </style>

    <style name="Widget.MaterialX.Button" parent="Widget.MaterialComponents.Button">
        <item name="rippleColor">@color/color_white</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="backgroundTint">@color/color_pink_900_light</item>
    </style>

    <style name="Widget.MaterialX.Button.OutlinedButton.Icon" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="iconTint">@color/color_grey_800</item>
        <item name="rippleColor">@color/color_yellow_A700</item>
        <item name="android:textColor">@color/color_grey_800</item>
    </style>

    <style name="Widget.MaterialX.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/bg_toggle_state</item>
        <item name="strokeColor">@color/color_pink_900_light</item>
        <item name="rippleColor">@color/color_yellow_A700</item>
        <item name="android:textColor">@color/color_grey_800</item>
    </style>

    <!--Input-->
    <style name="Widget.MaterialX.AppCompat.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:drawableTint" tools:targetApi="m">@color/color_orange_300</item>
    </style>

    <!--Alert Dialog-->
    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/color_grey_800</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/color_pink_900</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>
</resources>